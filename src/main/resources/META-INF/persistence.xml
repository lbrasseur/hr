<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
        http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd" version="2.0">

	<persistence-unit name="HR" transaction-type="RESOURCE_LOCAL">
		<provider>org.datanucleus.api.jpa.PersistenceProviderImpl</provider>
		<class>com.aajtech.hr.model.Person</class>
		<exclude-unlisted-classes />
		<properties>
			<property name="javax.persistence.jdbc.url" value="jdbc:hsqldb:mem:datanucleus" />
			<property name="javax.persistence.jdbc.driver" value="org.hsqldb.jdbcDriver" />
			<property name="javax.persistence.jdbc.user" value="sa" />
			<property name="javax.persistence.jdbc.password" value="" />
			<property name="datanucleus.schema.autoCreateAll" value="true" />
			<property name="datanucleus.schema.validateTables" value="false" />
			<property name="datanucleus.schema.validateConstraints"
				value="false" />
		</properties>
	</persistence-unit>
</persistence>
